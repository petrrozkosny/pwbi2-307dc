),
    #"Přidané: Index" = Table.AddIndexColumn(tabulka, "Index", 0, 1, Int64.Type),
    #"Změněný typ" = Table.TransformColumnTypes(#"Přidané: Index",{{"Lokalita", type text}, {"Mesto", type text}, {"Zeme", type text}})
